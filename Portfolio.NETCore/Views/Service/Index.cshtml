@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card ">
        <div class="card-body">
            <h4 class="card-title">Hizmetler Tablosu</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col" class="sort" data-sort="name">#</th>
                            <th scope="col" class="sort" data-sort="budget">Başlık</th>

                            <th scope="col" class="sort" data-sort="budget">Görsel</th>
                            <th scope="col">Sil</th>
                            <th scope="col" class="sort" data-sort="completion">Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">
                                    <div class="text-white">
                                        @item.ServiceID
                                    </div>
                                </th>
                                <th class="budget">
                                    @item.Title
                                </th>
                                <td>
                                    <img src="@item.ImageUrl" class="bg-white" />
                                </td>
                                <td>
                                    <a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Sil</a>
                                </td>
                                <td>
                                    <a href="/Service/EditService/@item.ServiceID" class="btn btn-outline-success">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<a href="/Service/AddService/" class="btn btn-primary float-right">Yeni Hizmet Ekle</a>
