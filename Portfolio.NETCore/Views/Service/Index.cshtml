@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Hizmet Listesi Tablosu</h3>
</div>
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Başlık</th>

                <th scope="col" class="sort" data-sort="budget">Görsel</th>
                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Düzenle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">
                        <div class="media-body">
                            <span class="name mb-0 text-sm">@item.ServiceID</span>
                        </div>
                    </td>
                    <td class="budget">
                        @item.Title
                    </td>
                    <td>
                        <img src="@item.ImageUrl" width="60"/>
                    </td>
                    <td>
                        <a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Sil</a>
                    </td>
                    <td>
                        <a href="/Service/EditService/@item.ServiceID" class="btn btn-outline-success">Güncelle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <a href="/Service/AddService/" class="btn btn-primary float-right">Yeni Hizmet Ekle</a>
</div>

