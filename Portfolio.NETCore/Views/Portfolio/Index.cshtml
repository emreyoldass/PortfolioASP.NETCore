@using EntityLayer.Concrete
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card bg-default shadow card-header border-0">
    <div class="card-header bg-transparent border-0">
        <h3 class="text-white mb-0">Dark table</h3>
    </div>
    <div class="table-responsive">
        <table class="table align-items-center table-flush table-dark">
            <thead class=" thead-dark">
                <tr>
                    <th scope="col" class="sort" data-sort="budget">Proje</th>
                    <th scope="col" class="sort" data-sort="status">Ücret</th>
                    <th scope="col" class="sort" data-sort="status">Durum</th>
                    <th scope="col" class="sort" data-sort="status">Tamamlanma Oranı</th>
                    <th scope="col">Sil</th>
                    <th scope="col" class="sort" data-sort="completion">Düzenle</th>

                </tr>
            </thead>
            <tbody class="list">
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">
                            <div class="media align-items-center">
                                <a href="#" class="avatar rounded-circle mr-3">
                                    <img alt="Image" src="@item.Platform">
                                </a>
                                <div class="media-body">
                                    <span class="name mb-0 text-sm">@item.Name</span>
                                </div>
                            </div>
                        </th>
                        <td class="budget">
                            @item.Price
                        </td>
                        <td>
                            <span class="badge badge-dot mr-4">
                                <i class="bg-success"></i>
                                <span class="status">Tamamlandı</span>
                            </span>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <span class="completion mr-2">@item.Value</span>
                                <div>
                                    <div class="progress">
                                        <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" style="width: @item.Value%;"></div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td><a href="/Portfolio/DeletePortfolio/@item.PortfolioID/"  onclick="return confirm('Gerçekten silmek istiyormusunuz?')" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/Portfolio/EditPortfolio/@item.PortfolioID/" class="btn btn-outline-warning ">Düzenle</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
    </div>

</div>
<a href="/Portfolio/AddPortfolio/" class="btn btn-primary float-right">Yeni Proje Ekle</a>
