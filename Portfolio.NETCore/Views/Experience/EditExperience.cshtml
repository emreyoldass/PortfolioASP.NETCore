@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "EditExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h1>Deneyim Düzenleme Sayfası</h1>
    @using (Html.BeginForm("EditExperience", "Experience", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.ExperienceID)
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Deneyim Düzenleme  Sayfası</h4>
                    <form class="forms-sample">
                        <div class="form-group">

                            @Html.Label("Deneyim Başlığı")
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                        </div>
                        <div class="form-group">

                            @Html.Label("Deneyim Tarihi")
                            @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Deneyim Resmi")
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Deneyim Açıklaması")
                            @Html.TextAreaFor(x => x.Description, 10, 3, new { @class = "form-control" })
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                        <button class="btn btn-dark">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

