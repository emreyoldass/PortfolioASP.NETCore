@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

    @using (Html.BeginForm("AddExperience", "Experience", FormMethod.Post))
    {
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Deneyim Ekleme  Sayfası</h4>
                    <p class="card-description"> Basic form elements </p>
                    <form class="forms-sample">
                        <div class="form-group">
                            @Html.Label("Deneyim Başlığı")
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                          
                            @Html.Label("Deneyim Tarihi")
                            @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Deneyim Resmi")
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Deneyim Açıklaması")
                            @Html.TextAreaFor(x => x.Description, 10, 3, new { @class = "form-control" })
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                        <button class="btn btn-dark">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    }

